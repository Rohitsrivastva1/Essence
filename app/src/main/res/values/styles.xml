<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- ===== BASE THEME ===== -->
    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Common attributes for all themes -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>
    
    <!-- ===== DARK THEME ===== -->
    <style name="DarkTheme" parent="BaseTheme">
        <item name="android:colorPrimary">@color/dark_primary</item>
        <item name="android:colorPrimaryDark">@color/dark_secondary</item>
        <item name="android:colorAccent">@color/dark_accent</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:textColorTertiary">@color/dark_text_tertiary</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:statusBarColor">@color/dark_primary</item>
        <item name="android:navigationBarColor">@color/dark_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- ===== LIGHT THEME ===== -->
    <style name="LightTheme" parent="BaseTheme">
        <item name="android:colorPrimary">@color/light_primary</item>
        <item name="android:colorPrimaryDark">@color/light_secondary</item>
        <item name="android:colorAccent">@color/light_accent</item>
        <item name="android:colorBackground">@color/light_background</item>
        <item name="android:textColorPrimary">@color/light_text_primary</item>
        <item name="android:textColorSecondary">@color/light_text_secondary</item>
        <item name="android:textColorTertiary">@color/light_text_tertiary</item>
        <item name="android:windowBackground">@color/light_background</item>
        <item name="android:statusBarColor">@color/light_primary</item>
        <item name="android:navigationBarColor">@color/light_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    
    <!-- ===== HIGH CONTRAST THEME ===== -->
    <style name="HighContrastTheme" parent="BaseTheme">
        <item name="android:colorPrimary">@color/hc_primary</item>
        <item name="android:colorPrimaryDark">@color/hc_secondary</item>
        <item name="android:colorAccent">@color/hc_accent</item>
        <item name="android:colorBackground">@color/hc_background</item>
        <item name="android:textColorPrimary">@color/hc_text_primary</item>
        <item name="android:textColorSecondary">@color/hc_text_secondary</item>
        <item name="android:textColorTertiary">@color/hc_text_tertiary</item>
        <item name="android:windowBackground">@color/hc_background</item>
        <item name="android:statusBarColor">@color/hc_primary</item>
        <item name="android:navigationBarColor">@color/hc_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- ===== AMOLED BLACK THEME ===== -->
    <style name="AmoledBlackTheme" parent="BaseTheme">
        <item name="android:colorPrimary">@color/amoled_primary</item>
        <item name="android:colorPrimaryDark">@color/amoled_secondary</item>
        <item name="android:colorAccent">@color/amoled_accent</item>
        <item name="android:colorBackground">@color/amoled_background</item>
        <item name="android:textColorPrimary">@color/amoled_text_primary</item>
        <item name="android:textColorSecondary">@color/amoled_text_secondary</item>
        <item name="android:textColorTertiary">@color/amoled_text_tertiary</item>
        <item name="android:windowBackground">@color/amoled_background</item>
        <item name="android:statusBarColor">@color/amoled_primary</item>
        <item name="android:navigationBarColor">@color/amoled_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
    
    <!-- ===== COMPONENT STYLES ===== -->
    
    <!-- Clock Text Styles -->
    <style name="ClockTextStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ClockTextStyle.Small">
        <item name="android:textSize">36sp</item>
    </style>
    
    <style name="ClockTextStyle.Medium">
        <item name="android:textSize">48sp</item>
    </style>
    
    <style name="ClockTextStyle.Large">
        <item name="android:textSize">60sp</item>
    </style>
    
    <style name="ClockTextStyle.ExtraLarge">
        <item name="android:textSize">72sp</item>
    </style>
    
    <!-- Date Text Styles -->
    <style name="DateTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- App Button Styles -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/app_button_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Quick Action Button Styles -->
    <style name="QuickActionButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/quick_action_background</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Search EditText Style -->
    <style name="SearchEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Spinner Styles -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Switch Styles -->
    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!-- Button Styles -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- Text View Styles -->
    <style name="TextViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="TextViewStyle.Small">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TextViewStyle.Medium">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextViewStyle.Large">
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TextViewStyle.ExtraLarge">
        <item name="android:textSize">24sp</item>
    </style>
    
    <!-- Icon Styles -->
    <style name="IconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    
    <style name="IconStyle.Small">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>
    
    <style name="IconStyle.Medium">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>
    
    <style name="IconStyle.Large">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>
    
</resources>
